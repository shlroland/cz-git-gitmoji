{
  "name": "cz-git-gitmoji",
  "type": "module",
  "version": "1.0.0",
  "description": "A few configurations for using gitmojis in cz",
  "author": "shlroland <shlroland1995@gmail.com>",
  "license": "MIT",
  "keywords": [
    "cz",
    "czg",
    "commitlint",
    "gitmoji",
    "cz-git",
    "cz-git-prompts"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cz-git": {
      "types": "./dist/cz-git.d.ts",
      "import": "./dist/cz-git.js",
      "require": "./dist/cz-git.cjs"
    },
    "./commitlint": {
      "types": "./dist/commitlint.d.ts",
      "import": "./dist/commitlint.ts",
      "require": "./dist/commitlint.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "pnpm --parallel --filter cz-git-gitmoji-prompts --filter commitlint-config-czg-gitmoji build",
    "lint": "eslint --fix .",
    "prepare": "husky",
    "ci:version": "pnpm changeset version && pnpm install --no-frozen-lockfile",
    "ci:publish": "pnpm install --no-frozen-lockfile && pnpm run build && pnpm publish --access public -r --no-git-checks --tag latest"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/format": "^19.5.0",
    "@shlroland/cz-config": "^2.1.1",
    "@shlroland/eslint-config": "^2.1.1",
    "@shlroland/lint-staged": "^3.1.1",
    "@types/node": "^22.7.6",
    "cz-git": "^1.10.1",
    "czg": "^1.10.1",
    "eslint": "^9.13.0",
    "eslint-plugin-format": "^0.1.2",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "tsup": "catalog:",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}
